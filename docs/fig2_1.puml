@startuml fig2_1
!theme plain
skinparam defaultFontName "Sarabun"
skinparam defaultFontSize 13

skinparam ActorStyle awesome
skinparam usecaseBorderColor #2C7BE5
skinparam usecaseBackgroundColor #EAF3FF
skinparam usecaseFontSize 12

skinparam RectangleBorderColor #555555
skinparam RectangleBorderThickness 2

skinparam ArrowColor #444444

left to right direction

' ─── Actors ───
actor "ผู้ใช้งาน\n(User)" as User
actor "ผู้ดูแลระบบ\n(Admin)" as Admin

' ─── System Boundary ───
rectangle "ระบบ CKLab Management System" {

    ' --- Kiosk Package ---
    package "Kiosk (หน้าจอสาธารณะ)" {
        usecase "UC-01\nCheck-in ด้วยรหัส UBU WiFi" as UC01
        usecase "UC-02\nCheck-in โหมด Guest" as UC02
        usecase "UC-03\nดูสถานะเซสชัน (Timer)" as UC03
        usecase "UC-04\nCheck-out ออกจากระบบ" as UC04
        usecase "UC-05\nให้ Feedback หลังใช้งาน" as UC05
    }

    ' --- Admin Portal Package ---
    package "Admin Portal" {
        usecase "UC-06\nเข้าสู่ระบบ Admin Portal" as UC06
        usecase "UC-07\nMonitor Dashboard\nแบบ Real-time" as UC07
        usecase "UC-08\nForce Check-in /\nForce Check-out แทนผู้ใช้" as UC08
        usecase "UC-09\nจัดการการ Booking\n(เพิ่ม / อนุมัติ / ปฏิเสธ)" as UC09
        usecase "UC-10\nนำเข้า Booking\nจาก CSV" as UC10
        usecase "UC-11\nจัดการเครื่องคอมพิวเตอร์\n(เพิ่ม / แก้ไข / ลบ)" as UC11
        usecase "UC-12\nจัดการซอฟต์แวร์\nและเครื่องมือ AI" as UC12
        usecase "UC-13\nดูรายงานและ\nExport CSV" as UC13
        usecase "UC-14\nตั้งค่าระบบและ\nจัดการผู้ดูแล" as UC14
    }
}

' ─── User Associations ───
User --> UC01
User --> UC02
User --> UC03
User --> UC04
User --> UC05

' ─── Admin Associations ───
Admin --> UC06
Admin --> UC07
Admin --> UC08
Admin --> UC09
Admin --> UC10
Admin --> UC11
Admin --> UC12
Admin --> UC13
Admin --> UC14

' ─── Include / Extend ───
UC01 .> UC03 : <<include>>
UC02 .> UC03 : <<include>>
UC03 .> UC04 : <<include>>
UC04 .> UC05 : <<include>>
UC09 .> UC10 : <<extend>>
UC07 .> UC08 : <<extend>>

@enduml
